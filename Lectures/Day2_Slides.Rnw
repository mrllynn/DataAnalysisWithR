b <- 2
c <- a + b # c = 3
c
@
\end{frame}

% *****************************************************************************

\begin{frame}[fragile]
\frametitle{Examples of assigned objects: vector}
<<echo=TRUE, eval=TRUE, size="scriptsize">>=
a <- c(1, 2, 3, 4, 5)
b <- 1
c <- a + b
c
@
\end{frame}

